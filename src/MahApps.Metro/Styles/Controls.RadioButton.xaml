        <Setter Property="Controls:RadioButtonHelper.OuterEllipseCheckedStrokePointerOver" Value="{DynamicResource MahApps.Brushes.RadioButton.OuterEllipseCheckedStrokePointerOver}" />
        <Setter Property="Controls:RadioButtonHelper.OuterEllipseCheckedStrokePressed" Value="{DynamicResource MahApps.Brushes.RadioButton.OuterEllipseCheckedStrokePressed}" />
        <Setter Property="Controls:RadioButtonHelper.OuterEllipseFill" Value="{DynamicResource MahApps.Brushes.RadioButton.OuterEllipseFill}" />
        <Setter Property="Controls:RadioButtonHelper.OuterEllipseFillDisabled" Value="{DynamicResource MahApps.Brushes.RadioButton.OuterEllipseFillDisabled}" />
        <Setter Property="Controls:RadioButtonHelper.OuterEllipseFillPointerOver" Value="{DynamicResource MahApps.Brushes.RadioButton.OuterEllipseFillPointerOver}" />
        <Setter Property="Controls:RadioButtonHelper.OuterEllipseFillPressed" Value="{DynamicResource MahApps.Brushes.RadioButton.OuterEllipseFillPressed}" />
        <Setter Property="Controls:RadioButtonHelper.OuterEllipseStroke" Value="{DynamicResource MahApps.Brushes.RadioButton.OuterEllipseStroke}" />
        <Setter Property="Controls:RadioButtonHelper.OuterEllipseStrokeDisabled" Value="{DynamicResource MahApps.Brushes.RadioButton.OuterEllipseStrokeDisabled}" />
        <Setter Property="Controls:RadioButtonHelper.OuterEllipseStrokePointerOver" Value="{DynamicResource MahApps.Brushes.RadioButton.OuterEllipseStrokePointerOver}" />
        <Setter Property="Controls:RadioButtonHelper.OuterEllipseStrokePressed" Value="{DynamicResource MahApps.Brushes.RadioButton.OuterEllipseStrokePressed}" />
        <Setter Property="Controls:RadioButtonHelper.RadioSize" Value="20" />
        <Setter Property="Controls:RadioButtonHelper.RadioStrokeThickness" Value="{DynamicResource RadioButtonBorderThemeThickness}" />
